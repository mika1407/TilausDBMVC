@model IEnumerable<TilausDBMVC.Models.Tuotteet>

@{
    <br />
    ViewBag.Title = "Tuotteet";
}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
      integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ"
      crossorigin="anonymous">

<h2>@ViewBag.Title</h2>

@*<p>
    @Html.ActionLink("Luo Uusi", "Create")
</p>*@

<p><a class="btn btn-primary" href="~/Tuotteet/Create/">Luo Uusi</a></p>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Nimi)</th>
        <th>@Html.DisplayNameFor(model => model.Ahinta)</th>
        <th>@Html.DisplayNameFor(model => model.Kuva)</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Nimi)</td>
        <td>@Html.DisplayFor(modelItem => item.Ahinta)</td>
        <td>@Html.DisplayFor(modelItem => item.Kuva)</td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id = item.TuoteID }) |
            @Html.ActionLink("Details", "Details", new { id = item.TuoteID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.TuoteID })*@
 
            <a class="btn btn-success" href="~/Tuotteet/Edit/@item.TuoteID">
                <i class="far fa-edit"></i> Edit</a>
            <a class="btn btn-success" href="~/Tuotteet/Details/@item.TuoteID">
                <i class="fas fa-info"></i> Details</a>
            <a class="btn btn-danger" href="~/Tuotteet/Delete/@item.TuoteID">
                <i class="far fa-trash-alt"></i> Delete</a>
        </td>
    </tr>
}

</table>
