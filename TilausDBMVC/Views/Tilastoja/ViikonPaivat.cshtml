@model TilausDBMVC.Models.Paivat

@{
    ViewBag.Title = "ViikonPaivat";
}
@section scripts {
    <script type="text/javascript">
        let labelTexts = [@Html.Raw(ViewBag.Weekday)];
        let dataValues =  [@ViewBag.TuotteidenMyynti];
        var ctx = document.getElementById('barcanvas').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labelTexts,
                datasets: [{
                    label: 'Tilaukset per viikonpäivä',
                    data: dataValues,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>
}
<br />
<h2>Myynti Viikonpäivinä</h2>

<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <canvas id="barcanvas"></canvas>
        </div>
    </div>
    <div style="text-align: center">
        Tiedot on haettu paikallisesta testitietokannasta!
    </div>
</div>

